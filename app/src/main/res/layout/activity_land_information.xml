                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:padding="10dp"
                android:text="@string/info"
                android:textColor="@color/Black"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>

    </ScrollView>
